<RelativeLayout android:layout_width="180dp"
    android:layout_height="300dp"
    android:padding="4dp"
    android:background="@drawable/theme_main_card_border"
    android:backgroundTint="?attr/colorOnBackground"
    android:id="@+id/single_theme_card_theme_card_border"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/theme_main_card"
        android:backgroundTint="?attr/backgroundColor">
        <View
            android:id="@+id/search_zone"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/theme_search_zone"
            android:backgroundTint="?attr/colorPrimaryVariant"/>

        <RelativeLayout
            android:id="@+id/body_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_zone">

            <LinearLayout
                android:id="@+id/item_card"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/theme_card_item"
                android:backgroundTint="?attr/colorOnBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <View
                        android:id="@+id/item_card_left_side"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/theme_item_left_side"
                        android:backgroundTint="?attr/colorSecondary"/>
                    <View
                        android:id="@+id/item_card_right_side"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/theme_item_right_side"
                        android:backgroundTint="?attr/colorSecondary"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <View
                android:id="@+id/circle_shape"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/theme_circle_shape"
                android:backgroundTint="?attr/colorPrimary"/>

            <View
                android:id="@+id/rectangle_shape"
                android:layout_width="100dp"
                android:layout_marginStart="10dp"
                android:layout_height="30dp"
                android:background="@drawable/theme_rectangle_shape"
                android:backgroundTint="?attr/colorSecondaryVariant"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>